# ===========================================
# TOC-Core Deployment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# WALLET CONFIGURATION
# ===========================================

# Your deployer wallet mnemonic (12 or 24 words)
# This wallet will be the owner of deployed contracts
# Make sure it has enough ETH for gas on your target network
MNEMONIC="your twelve word mnemonic phrase goes here for deployment"

# ===========================================
# RPC ENDPOINTS
# ===========================================

# Sepolia Testnet (for testing)
# Get free RPC from: Alchemy, Infura, or use public endpoint
SEPOLIA_RPC_URL="https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY"

# Base Mainnet
BASE_RPC_URL="https://mainnet.base.org"

# Arbitrum Mainnet
ARBITRUM_RPC_URL="https://arb1.arbitrum.io/rpc"

# Polygon Mainnet
POLYGON_RPC_URL="https://polygon-rpc.com"

# ===========================================
# BLOCK EXPLORER API KEYS (for verification)
# ===========================================

# Etherscan API key (for Sepolia verification)
ETHERSCAN_API_KEY="your_etherscan_api_key"

# Basescan API key
BASESCAN_API_KEY="your_basescan_api_key"

# Arbiscan API key
ARBISCAN_API_KEY="your_arbiscan_api_key"

# Polygonscan API key
POLYGONSCAN_API_KEY="your_polygonscan_api_key"

# ===========================================
# DEPLOYMENT PARAMETERS
# ===========================================

# Your address that will own the contracts (receives admin rights)
# This should be a secure address - ideally a multisig for production
DEPLOYER_ADDRESS="0xYourAddressHere"

# Treasury address for collecting protocol fees
TREASURY_ADDRESS="0xYourTreasuryAddressHere"
